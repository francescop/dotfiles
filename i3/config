set $mode_system    [L]OCK       LOG[O]UT       [R]EBOOT       [S]HUTDOWN
bindsym $mod+$alt+Delete mode "$mode_system"
bindsym $mod+Ctrl+Delete mode "$mode_system"
bindsym $mod+Delete mode "$mode_system"
bindsym $alt+Delete mode "$mode_system"
bindsym Ctrl+$alt+Delete mode "$mode_system"
mode "$mode_system" {
    bindsym l exec "i3lock --ignore-empty-password --show-failed-attempts && xset dpms force off"
    bindsym o exec "i3-msg exit"
    bindsym r exec "systemctl reboot"
    bindsym s exec "systemctl poweroff"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

