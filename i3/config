font pango: Ubuntu Mono derivative Powerline, Ubuntu Mono, DejaVu Sans Mono, monospace 8

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    font pango:DejaVu Sans Mono, Awesome, monospace 8
    position top
    status_command i3status
    colors {
        statusline $white
        focused_workspace $green $dark_blue $white
        active_workspace $green $green $white
        inactive_workspace $green $black $gray
        urgent_workspace $red $red $white
    }
}


