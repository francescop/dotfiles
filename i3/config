bindsym $mod+z exec --no-startup-id zenity --calendar

# Multi-screen screenshots with scrot
bindsym --release Print exec scrot 'screenshot_%Y%m%d_%H%M%S.png' -e 'mkdir -p /tmp/screenshots && mv $f /tmp/screenshots && xclip -selection clipboard -t image/png -i /tmp/screenshots/`ls -1 -t /tmp/screenshots | head -1`' # All screens

# OSX-like area selection screenshots
bindsym --release Shift+Print exec scrot -s 'screenshot_%Y%m%d_%H%M%S.png' -e 'mkdir -p /tmp/screenshots && mv $f /tmp/screenshots && xclip -selection clipboard -t image/png -i /tmp/screenshots/`ls -1 -t /tmp/screenshots | head -1`' # Area selection

# Media volume controls
bindsym XF86AudioMute exec amixer sset 'Master' toggle
bindsym XF86AudioLowerVolume exec amixer sset 'Master' 5%-
bindsym XF86AudioRaiseVolume exec amixer sset 'Master' 5%+
bindsym XF86AudioMicMute exec pactl set-source-mute 1 toggle

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 5 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 5 # decrease screen brightness

# toggle display fn key
bindsym XF86Display exec --no-startup-id ~/bin/toggle_display.sh
